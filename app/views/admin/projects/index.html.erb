<div class="row">
  <div class="col-md-12">
    <h1>All Projects!
      <%= link_to "+ new project", new_admin_project_path,  class: "btn btn-primary pull-right" %>
    </h1>
  </div>
</div>
<table class="table table-hover table-responsive table-condensed">
  <thead>
    <tr>
      <th>img</th>
      <th>Name</th>
      <th>Site</th>
      <th>Code</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.try(:each) do |p| %>
      <tr>
        <% if p.images.first %>
          <td><%= image_tag p.images.first.picture.url(:thumb) %></td>
        <% end %>
        <td><%= link_to p.name, edit_admin_project_path(p)%></td>
        <td><%= p.site%></td>
        <td><%= p.code%></td>
        <td class="delete"><%= link_to "x", "/admin/projects/#{p.id}", method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <h1><%= link_to "sign_out", destroy_user_session_path, method: :delete %></h1>
<% end %>
