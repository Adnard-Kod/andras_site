<div class="row">
  <div class="col-md-offset-1 col-md-9">
    <h1>Edit Project</h1>
    <%= link_to 'back to list', admin_projects_path %>
    <%= form_for @project, url: { controller: 'projects', action: :update } do |f| %>
      <%= render partial: 'form', locals: { f: f  } %>
      <%= f.submit "Save Project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div><!-- row -->
<br>
<div class="col-md-offset-1 col-md-9">
  <%= form_for @image, url: { :controller => 'images', :action => 'upload', project_id: @project.id } do |f| -%>
    <div class="form-group">
      <label>Add New Images:</label>
      <%= f.file_field :picture, class: "form-control" %>
    </div>
    <div>
      <%= submit_tag 'add image +',  class: "btn btn-success" %>
    </div>
  <% end -%>

  <div class="form-group" id="add-picture">
    <h1>Images
    <div class="row">
        <% @project.images.each do |image| %>
        <div class="col-md-4">
          <div id="pic_<%= image.id %>">
            <br>
            <%= image_tag image.picture.url(:listing) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
